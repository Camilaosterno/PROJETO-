#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include <math.h>

typedef struct {
    int livroId, copias;
    char titulo[100], autor[100], editora[100];
} Livro;
typedef struct ListaLivros {
    Livro * livro;
    struct ListaLivros * proximo;
} ListaLivros;
int gerarId(ListaLivros * lista) {
    int id = 1;
    ListaLivros * atual = lista->proximo;
    while (atual != NULL) {
        if (atual->livro->livroId == id) {
            id++;
            atual = lista->proximo;
        } else {
            atual = atual->proximo;
        }
    }
    return id;
}
